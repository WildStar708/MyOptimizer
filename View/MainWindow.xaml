<Window x:Class="MyOptimizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MyOptimizer.ViewModel"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Тестер Алгоритмів Оптимізації (ГА та GWO)" Height="700" Width="1000"
        FontFamily="Segoe UI">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Колонка для параметрів і результатів -->
            <ColumnDefinition Width="280"/>
            <!-- Колонка для графіка -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ЛІВА ПАНЕЛЬ: Керування та Результати -->
        <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0" Padding="20">
            <StackPanel>

                <TextBlock Text="Параметри Алгоритмів" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                <!-- Введення Кількість Ітерацій -->
                <TextBlock Text="Макс. кількість ітерацій:" Margin="0,5,0,0"/>
                <TextBox Text="{Binding MaxIterations, UpdateSourceTrigger=PropertyChanged}" 
                         ToolTip="Кількість циклів для кожного алгоритму." 
                         Margin="0,5,0,15"/>

                <!-- Кнопки запуску -->
                <Button Content="Запустити Генетичний Алгоритм" 
                        Command="{Binding RunGACommand}" 
                        Background="#4CAF50" Foreground="White"/>

                <Button Content="Запустити Алгоритм Сірих Вовків (GWO)" 
                        Command="{Binding RunGWOCommand}"
                        Background="#2196F3" Foreground="White" 
                        Margin="0,10,0,25"/>

                <!-- БЛОК СТАТУСУ -->
                <Border BorderBrush="#DDDDDD" BorderThickness="1" Padding="10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Статус:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding Result.Status}" 
                                   Foreground="DarkGreen" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- БЛОК РЕЗУЛЬТАТІВ -->
                <TextBlock Text="Останній Результат" FontSize="18" FontWeight="Bold" Margin="0,25,0,10"/>

                <TextBlock Text="Алгоритм:" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding Result.AlgorithmName}" Foreground="#444444"/>

                <TextBlock Text="Знайдене X (Оптимум):" FontWeight="SemiBold" Margin="0,15,0,0"/>
                <TextBlock Text="{Binding Result.OptimalX, StringFormat='F4'}" FontSize="16" Foreground="#FF5722"/>

                <TextBlock Text="F(X) (Мінімум):" FontWeight="SemiBold" Margin="0,15,0,0"/>
                <TextBlock Text="{Binding Result.OptimalFx, StringFormat='F6'}" FontSize="16" Foreground="#E91E63"/>

                <!-- Примітка про функцію -->
                <TextBlock Margin="0,30,0,0" TextWrapping="Wrap" FontSize="11" Foreground="#666666">
                    *Поточна цільова функція: F(x) = x^2, мінімум в x=0.
                </TextBlock>

            </StackPanel>
        </Border>

        <!-- ПРАВА ПАНЕЛЬ: ГРАФІК -->
        <Border Grid.Column="1" Padding="20">
            <StackPanel>
                <!-- Move the chart title outside of CartesianChart -->
                <TextBlock Text="Прогрес Пристосованості (F(x)) по Ітераціях" 
                           FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <lvc:CartesianChart Series="{Binding HistorySeries}" 
                                    LegendLocation="Right" 
                                    Hoverable="True">
                    <lvc:CartesianChart.AxisX>
                        <!-- Прив'язка міток ітерацій -->
                        <lvc:Axis Title="Номер Ітерації" 
                                  Labels="{Binding Labels}" 
                                  Separator="{x:Static lvc:DefaultAxes.CleanSeparator}"/>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="F(x) (Значення Пристосованості)"
                                  MinValue="0" 
                                  Separator="{x:Static lvc:DefaultAxes.CleanSeparator}"/>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </StackPanel>
        </Border>
    </Grid>
</Window>